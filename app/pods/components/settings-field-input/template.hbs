{{#settings-field
  fieldName   = fieldName
  label       = label
  description = description

  requestIsPending  = requestIsPending
  requestIsRejected = requestIsRejected

  errorLabel = errorLabel
}}
  <input
    class     = 'settingsFieldInput-input'
    disabled  = {{requestIsPending}}
    type      = {{type}}
    value     = {{if (is-nully value) defaultValue value}}
    oninput   = {{action (or updateAction (action (mut value))) value="target.value"}}
  >
{{/settings-field}}{{! maxTempBeforeTimer }}